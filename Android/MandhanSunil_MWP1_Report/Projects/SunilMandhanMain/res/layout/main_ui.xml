<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="13"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/android:empty"
        android:layout_column="6"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="@string/no_notes" />

    <TextView
        android:id="@+id/textView_main_address1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="right"
        android:layout_row="1"
        android:text="Address" />

    <EditText
        android:id="@+id/editText_main_address1"
        android:layout_width="260dp"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textView_main_map_lattitude"
        android:layout_width="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="Latitude:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView_main_map_longitude"
        android:layout_width="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="right"
        android:layout_row="4"
        android:text="Longitude:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView_main_note_title"
        android:layout_width="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="right"
        android:layout_row="5"
        android:text="Title:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView_main_note_date"
        android:layout_width="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="right"
        android:layout_row="6"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView_main_note_time"
        android:layout_width="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="right"
        android:layout_row="7"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView_main_note_body"
        android:layout_width="300dp"
        android:layout_height="136dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="right"
        android:layout_row="8"
        android:text="Body:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_main_map1"
        android:layout_column="0"
        android:layout_gravity="bottom"
        android:layout_row="11"
        android:text="map" />

    <Button
        android:id="@+id/Button_main_notes1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom"
        android:layout_row="11"
        android:text="notes" />

    <Button
        android:id="@+id/Button_main_email"
        android:layout_column="3"
        android:layout_gravity="bottom"
        android:layout_row="11"
        android:text="email" />

    <Space
        android:layout_column="7"
        android:layout_gravity="fill_vertical"
        android:layout_row="0" />

    <Space
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="98dp"
        android:layout_height="1dp"
        android:layout_column="4"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="31dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2" />

    <Space
        android:layout_width="1dp"
        android:layout_height="157dp"
        android:layout_column="0"
        android:layout_row="8" />

    <Space
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

</GridLayout>