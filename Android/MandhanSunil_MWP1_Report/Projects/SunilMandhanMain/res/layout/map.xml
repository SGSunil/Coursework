<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayoutmap1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="15"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/editTextmap1"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0" />

    <Button
        android:id="@+id/buttonmap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="12"
        android:layout_gravity="bottom"
        android:layout_row="0"
        android:text="map it" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_column="0"
        android:layout_row="1"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/button_map_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_row="1"
        android:text="Back" />

    <com.google.android.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_column="0"
        android:layout_columnSpan="13"
        android:layout_row="2"
        android:apiKey="0E6K395vQKyngWfm6sUh0xLrz7zrj1_ARcI4Evw"
        android:clickable="true" >
    </com.google.android.maps.MapView>

    

</GridLayout>
